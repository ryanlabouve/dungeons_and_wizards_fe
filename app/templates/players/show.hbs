<div class="mv4">
  {{#link-to "players" class="link white bg-yellow ph3 pv3"}}
    &lt;&nbsp;BACK
  {{/link-to}}
</div>
<div class="card-big magic-center">
  <div class="fl w-50">
    <img src={{player.image}} style="width: 100%;">
  </div>
  <div class="fl w-50 pa4">
    <h1>
      {{player.name}}
    </h1>
    Quote:
    <p>{{player.quote}}</p>
    <ul>
      {{#each player.moves as |move|}}
        <li>{{move.name}}</li>
      {{/each}}
    </ul>
    <p>&nbsp;</p>
    <p>&nbsp;</p>
    <button
       onclick={{action "selectCharacterAndJoinBattle"}}
       class="link white bg-yellow ph3 pv3">
      * JOIN BATTLE *
    </button>
  </div>
</div>
