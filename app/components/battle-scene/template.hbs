<div style="height: 100%; position: relative; padding-top: 1px;">
  <div id="hpBar" class="w-80 mt4 tc" style="margin: 40px auto; line-height: 2; text-shadow: 0 0 10px black;">

  <div class="hp-bar-bg relative" style="">
    &nbsp;
    <div style="position: absolute; top: 0; right: 0; width: {{sub 100 healthPercentage}}%;
    height: 100%; background: black;">
      &nbsp;
    </div>
  </div>
    <div>
      TOWER PARTY HP ({{sub battle.hp_total battle.damage_total}}/{{battle.hp_total}})
    </div>
  </div>
  <div
    style="
      position: absolute;
      bottom: 0;
      left: 50%;
      z-index:2;
      opacity: 0.5;
      transform: translateX(-50%);
    "
    class="line-of-fire">
    {{#if oneForthsDead}}
      <img width=50 src="/images/fire.gif">
      <img width=50 src="/images/fire.gif">
      <img width=50 src="/images/fire.gif">
    {{/if}}
    {{#if halfDead}}
      <img width=50 src="/images/fire.gif">
      <img width=50 src="/images/fire.gif">
      <img width=50 src="/images/fire.gif">
    {{/if}}
    {{#if threeForthsDead}}
      <img width=50 src="/images/fire.gif">
      <img width=50 src="/images/fire.gif">
    {{/if}}
  </div>
  {{#if dead}}
  <img src="/images/fire.gif"
    style="position: absolute;
      bottom: 0;
      left: 50%;
      opacity: 0.6;
      transform: translateX(-50%);
      z-index:2;
  "
  >
  {{/if}}
  <img
    style="position: absolute;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      z-index:1;
    "
    src="/images/tower.png">

  <div
    style="
      position: absolute;
      left: 20%;
      {{if (not threeForthsDead) "animation: bounce 0.4s infinite, shuffle 10s infinite;"}}
      {{if threeForthsDead "transform: rotate(90deg);"}}
      z-index: 3;
      bottom: 0;
      "
    >
    <img  width=100 src="/images/fiend1.png">
  </div>

  <div
    style="
      position: absolute;
      left: 20%;
      bottom: 0;
      z-index: 3;
      {{if almostDead "transform: rotate(-70deg); left: 60%; bottom: -40px; z-index:1;"}}
      {{if (not almostDead) "animation: bounce 0.5s infinite, shuffle 5s infinite;"}}
      "
    >
    <img width=100 src="/images/fiend2.png">
  </div>
</div>
